{
	"name": "gracely",
	"version": "0.1.10",
	"description": "Graceful error handling for REST API:s.",
	"author": "PayFunc",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/payfunc/gracely"
	},
	"bugs": {
		"url": "https://github.com/payfunc/gracely/issues"
	},
	"homepage": "https://payfunc.com/open-source/gracely",
	"private": false,
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"git": {
		"tagName": "v${version}"
	},
	"github": {
		"release": true
	},
	"jest": {
		"globals": {
			"ts-jest": {
				"tsConfig": "tsconfig.test.json"
			}
		},
		"testEnvironment": "node",
		"testRegex": "((\\.|/)(test|spec))(\\.|\\/.+)(jsx?|tsx?)$",
		"testPathIgnorePatterns": [
			"node_modules/",
			"dist/"
		],
		"collectCoverageFrom": [
			"**/*.{ts,tsx,js,jsx}",
			"!**/node_modules/**",
			"!**/dist/**"
		],
		"preset": "ts-jest",
		"testMatch": null
	},
	"scripts": {
		"dev": "watch 'npm run build' .",
		"build": "tsc -p .",
		"lint": "eslint '**/*.{js,ts,tsx}'",
		"fix": "eslint '**/*.{js,ts,tsx}' --fix",
		"test": "jest",
		"test:watch": "watch jest",
		"prepare": "npm run build",
		"clean": "rm -rf dist node_modules coverage"
	},
	"devDependencies": {
		"@types/jest": "^27.4.0",
		"@types/node": "^14.11.10",
		"@typescript-eslint/eslint-plugin": "^5.9.0",
		"@typescript-eslint/parser": "^5.9.0",
		"babel-core": "^6.26.3",
		"babel-jest": "^27.4.5",
		"eslint": "^7.11.0",
		"eslint-config-standardize": "^0.9.1",
		"eslint-plugin-prettierx": "github:robinnedergard/eslint-plugin-prettierx#master",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"jest": "^27",
		"prettierx": "github:robinnedergard/prettierx#newline-before-clause-sync",
		"ts-jest": "^27.1.2",
		"typescript": "^4.5.4",
		"watch": "0.13.0"
	}
}
